@using Master40.DB.Models
@model IEnumerable<Master40.DB.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (ViewData["OrderId"] != null) {
        string createdId = ViewData["OrderId"].ToString();
        <script>
            $(document).ready(function () {
                $("#@Html.Raw(createdId)").click()
            });
        </script>
    }
}
<h2>Index</h2>

<p>
    <a asp-action="Create" asp-controller="Orders" data-target="#modal-container"
       data-toggle="modal" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Create
    </a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusinessPartner)
        </th>
        <th style="text-align: right;">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessPartner.Name)
            </td>
            <td style="text-align: right;">
                <a asp-action="Edit" asp-controller="Orders" asp-route-id="@item.Id"
                   data-target="#modal-container" data-toggle="modal"  class="btn btn-default">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>
                <a id="@item.Id" asp-action="Details" asp-controller="Orders" asp-route-id="@item.Id"
                   data-target="#modal-container" data-toggle="modal"  class="btn btn-default">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                </a> 
                <a asp-action="Delete" asp-controller="Orders" asp-route-id="@item.Id"
                   data-target="#modal-container" data-toggle="modal"  class="btn btn-default">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div id="modal-container" class="modal fade hidden-print" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="loading"></div>
        </div>
    </div>
</div>
<div id="modal-sub-container" class="modal fade hidden-print" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>