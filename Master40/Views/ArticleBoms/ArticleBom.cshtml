@model IEnumerable<Master40.Models.DB.ArticleBom>
@if (Model.Count() > 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleChild)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleParent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleChild.ArticleID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleParent.ArticleID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArticleBomId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ArticleBomId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArticleBomId">Delete</a>
                </td>
            </tr>
            if (item.ArticleChild != null && item.ArticleChild.ArticleBoms != null)
            {
                <tr>
                    <td></td>
                    <td colspan="5">
                        @Html.Partial("ArticleBom", item.ArticleChild.ArticleBoms)
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
}