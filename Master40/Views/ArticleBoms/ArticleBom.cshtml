@model IEnumerable<Master40.Models.DB.ArticleBomItem>
@{
    string level = ViewData["level"]?.ToString() ?? "";
    level = (level != "") ?  level + "." : level;
    int count = 0;
    string display = "";
}
@if (Model.Count() > 0 && Model != null)
{
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{ count = count + 1; display = level + count.ToString(); }
                    @display
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleBom.ArticleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Article.ArticleId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArticleBomItemId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ArticleBomItemId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArticleBomItemId">Delete</a>
                </td>
            </tr>
                if (item.Article.ArticleBoms != null)
                {
                    foreach (var bom in item.Article.ArticleBoms)
                    {
                    ViewData["level"] = level + count.ToString();
                    @Html.Partial("ArticleBom", bom.ArticleBomItems, this.ViewData)
                }

            }
       }
   }