@model IEnumerable<Master40.Models.DB.ArticleBom>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article.DeliveryPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article.ArticleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article.Unit)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Article.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Article.DeliveryPeriod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Article.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Article.ArticleType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Article.Unit.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArticleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ArticleId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArticleId">Delete</a>
                </td>
            </tr>
            <tr>
                <td colspan="7">
                    <h3>Bomstructure</h3>
                </td>
            </tr>
            <tr>
                <td colspan="7">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Level</th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    ArticleChild
                                </th>
                                <th>
                                    ArticleParent
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                                @Html.Partial("ArticleBom", item.ArticleBomItems, new ViewDataDictionary(ViewData) { { "level", null } })
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>



