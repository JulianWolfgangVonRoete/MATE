@model IEnumerable<Master40.DB.Models.Machine>

@{
    ViewBag.Title = "Agent Basic";

    Layout = "_Layout";
}

<style>
</style>
<script>
    const processingProxy = new signalR.HubConnectionBuilder()
        .withUrl("/MessageHub")
        .configureLogging(signalR.LogLevel.Information)
        .build();
</script>

<div class="container-fluid">
    <div class="row">
         <div class="col-md-9 col-sm-9">
            <div class="container-fluid">
                <div class="row">
                    <h2>Agent System</h2>
                    <div class="col-md-10 col-sm-10">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    Machine Workload
                                </h4>
                            </div>
                            <div class="panel-body">
                                <div style="text-align: center">
                                    @if (Model.Count() > 6)
                                    {
                                        @Html.Raw(@"<style>
                                                        .chartContainer {
                                                            position: relative;
                                                            width: 100px;
                                                            margin-left: 20px;
                                                            margin-right: 20px;
                                                            height: 100px;
                                                        }
                                                        </style>")
                                    }
                                    else
                                    {
                                        @Html.Raw(@"<style>
                                                        .chartContainer {
                                                            position: relative;
                                                            width: 150px;
                                                            margin-left: 20px;
                                                            margin-right: 20px;
                                                            height: 150px;
                                                        }
                                                        .textLayer {
                                                            padding-top: 70px;
                                                            font: bold 20px Helvetica;
                                                        </style>")
                                    }
                                    @foreach (var section in Model)
                                    {
                                        @await Html.PartialAsync("~/Views/AgentLive/PartialMachine.cshtml", section)
                                    }
                                </div>
                                <div>
                                    @await Html.PartialAsync("~/Views/AgentLive/PartialTotalWorkLoad.cshtml")
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-2">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    Timeliness
                                </h4>
                            </div>
                            <div class="panel-body">
                                @await Html.PartialAsync("~/Views/AgentLive/PartialTimeliness.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-2" style="margin-top: 0px">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="bs-callout bs-callout-info" id="callout-xref-input-group">
                                    <h4>Clock</h4>
                                    <p id="clock"><b>0</b></p>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="bs-callout bs-callout-info" id="callout-xref-input-group">
                                    <h4>Orders</h4>
                                    <p id="orders"><b>0</b></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    Work in Progress
                                </h4>
                            </div>
                            <div style="text-align: center"  class="panel-body">
                                @await Html.PartialAsync("~/Views/AgentLive/PartialContract.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    Throughput Times
