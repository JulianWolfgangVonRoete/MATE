@model Master40.DB.Models.SimulationConfiguration

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<h2>Simulation Configuration</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Create</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Time" class="col-md-4 control-label">Start Time ?</label>
            <div class="col-md-8">
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaxCalculationTime" class="col-md-4 control-label">Max Calculation Time</label>
            <div class="col-md-8">
                <input asp-for="MaxCalculationTime" class="form-control" />
                <span asp-validation-for="MaxCalculationTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Lotsize" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Lotsize" class="form-control" />
                <span asp-validation-for="Lotsize" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderQuantity" class="col-md-4 control-label">Order Quantity</label>
            <div class="col-md-8">
                <input asp-for="OrderQuantity" class="form-control" />
                <span asp-validation-for="OrderQuantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TimeSpanForOrders" class="col-md-4 control-label">Spawn Time</label>
            <div class="col-md-8">
                <input asp-for="TimeSpanForOrders" class="form-control" />
                <span asp-validation-for="TimeSpanForOrders" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Seed" class="col-md-4 control-label"></label>
            <div class="col-md-8">
                <input asp-for="Seed" class="form-control" />
                <span asp-validation-for="Seed" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" asp-toggle="modal" data-target="#modal-container" value="Create" class="btn btn-default">Save</button>
        </div>        
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
